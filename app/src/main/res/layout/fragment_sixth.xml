<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthFragment">

    <TextView
        android:id="@+id/textview_sixth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Username:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Username:" />

    <EditText
        android:id="@+id/edittext_sixth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="type your name here"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName|textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_sixth"/>

    <TextView
        android:id="@+id/textview_sixth_alt"
        android:layout_width="314dp"
        android:layout_height="100dp"
        android:text="Password:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@id/button_sixth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_sixth"
        tools:text="Password:" />

    <EditText
        android:id="@+id/edittext_sixth_alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="type your password here"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName|textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_sixth_alt"/>

    <Button
        android:id="@+id/button_sixth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_sixth_alt"
        app:layout_constraintVertical_bias="0.24"
        tools:text="Login or Register" />

    <Button
        android:id="@+id/button_sixth_alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sixth"
        tools:text="Previous" />

</androidx.constraintlayout.widget.ConstraintLayout>